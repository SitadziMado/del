<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.adrax.dely.fragments.OrderDialog">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Описание"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="171dp" />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="От"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/tvDay"
        android:layout_width="75dp"
        android:layout_height="22dp"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="12/04/17"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/tvPayment"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDescription"
        tools:layout_editor_absoluteY="58dp"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/tvTimeTake"
        android:layout_width="75dp"
        android:layout_height="22dp"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="15:30"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/tvPayment"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvFrom"
        tools:layout_editor_absoluteY="58dp"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/tvTimeBring"
        android:layout_width="75dp"
        android:layout_height="22dp"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="16:30"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/tvPayment"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTo"
        tools:layout_editor_absoluteY="111dp"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/tvTo"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="До"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvFrom"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvPayment"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:text="З/П"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvWeight"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvCost"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:text="Телефон"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTo" />

    <TextView
        android:id="@+id/tvCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Стоимость"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

</android.support.constraint.ConstraintLayout>
